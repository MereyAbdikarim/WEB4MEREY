<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://fonts.googleapis.com/css2?family=Exo:wght@700&family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
  <title>Admin Page</title>
  <style>
    /* Reset CSS */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Montserrat', sans-serif;
      background-color: #f8f8f8;
    }

    /* Navbar */
    .nav-container {
      background-color: #333;
      overflow: hidden;
      display: flex;
      justify-content: center;
    }

    .nav-container a {
      color: #fff;
      text-decoration: none;
      padding: 1rem 2rem;
      margin: 0 0.5rem;
      transition: background-color 0.3s ease;
    }

    .nav-container a:hover {
      background-color: #555;
    }

    /* Admin Container */
    .admin-container {
      text-align: center;
      padding: 50px 0;
      background-color: #007bff;
      color: #fff;
    }

    .admin-container h1 {
      font-size: 2.5rem;
      margin-bottom: 20px;
    }

    .admin-container h2 {
      font-size: 1.8rem;
      margin-bottom: 40px;
    }

    .admin-container form {
      max-width: 400px;
      margin: 0 auto;
    }

    .admin-container label {
      display: block;
      margin-bottom: 10px;
    }

    .admin-container input[type="email"] {
      width: 100%;
      padding: 10px;
      margin-bottom: 20px;
      border-radius: 4px;
      border: 1px solid #ccc;
    }

    .admin-container button[type="submit"] {
      width: 100%;
      padding: 10px;
      background-color: #0056b3;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .admin-container button[type="submit"]:hover {
      background-color: #003366;
    }

    /* Container */
    .container {
      max-width: 800px;
      margin: 20px auto;
      padding: 20px;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* Weather and Quote Container */
    .weather-quote-container {
      margin-top: 50px;
      text-align: center;
    }

    .weather-quote-container h1 {
      font-size: 2rem;
      margin-bottom: 20px;
    }

    .weather-quote-container form {
      display: flex;
      justify-content: center;
      margin-bottom: 30px;
    }

    .weather-quote-container input[type="text"] {
      width: 300px;
      padding: 10px;
      margin-right: 10px;
      border-radius: 4px;
      border: 1px solid #ccc;
    }

    .weather-quote-container button[type="submit"] {
      padding: 10px 20px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .weather-quote-container button[type="submit"]:hover {
      background-color: #0056b3;
    }

    .result-container {
      padding: 20px;
      border-radius: 4px;
      border: 1px solid #ccc;
      background-color: #f9f9f9;
    }

    /* Quiz Container */
    .quiz-container {
      max-width: 600px;
      margin: 20px auto;
      padding: 20px;
      background-color: #f9f9f9;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .question {
      margin-bottom: 20px;
    }

    .option {
      margin-bottom: 10px;
    }

    .submit-btn {
      width: 100%;
      padding: 10px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s ease;
    }

    .submit-btn:hover {
      background-color: #0056b3;
    }
    .social-sharing {
    margin-top: 20px;
  }

  .social-sharing button {
    background-color: #3b5998; /* Facebook blue */
    color: #fff;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    margin-right: 10px;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease;
  }

  .social-sharing button:hover {
    background-color: #2d4373; /* Darker shade of Facebook blue */
  }

  /* Twitter button */
  .social-sharing button:nth-child(2) {
    background-color: #1da1f2; /* Twitter blue */
  }

  /* LinkedIn button */
  .social-sharing button:nth-child(3) {
    background-color: #0077b5; /* LinkedIn blue */
  }
  </style>
</head>
<body>

<div class="nav-container">
  <a href="#admin">Admin Page</a>
  <a href="#weather">Weather</a>
  <a href="#quote">Random Quote</a>
  <a href="#quiz">Random Quiz</a>
</div>

<div id="admin" class="admin-container">
  <h1>Admin Page</h1>
  <h2>Welcome to the Admin Page</h2>
  <form action="/admin" method="post">
    <label for="email">Email to Delete:</label>
    <input type="email" id="email" name="email" required>
    <button type="submit">Delete User</button>
  </form>
</div>

<div class="container weather-quote-container" id="weather">
  <h1>Weather, City, Quote App</h1>
  <div class="row mb-4">
    <div class="col-md-6">
      <h2>Get Weather</h2>
      <form action="/weather" method="get">
        <div class="mb-3">
          <label for="weatherCity" class="form-label">Enter City:</label>
          <input type="text" id="weatherCity" name="city" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Get Weather</button>
      </form>
      <div id="weatherResult" class="result-container mt-3"></div>
    </div>
    <div class="col-md-6">
      <h2>City Information</h2>
      <form action="/cityinfo" method="get">
        <div class="mb-3">
          <label for="cityInfoCity" class="form-label">Enter City:</label>
          <input type="text" id="cityInfoCity" name="city" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Get City Info</button>
      </form>
      <div id="cityInfoResult" class="result-container mt-3"></div>
    </div>
  </div>
  <div class="mt-4">
    <h2>Random Quote</h2>
    <form action="/quotes" method="get">
      <button type="submit" class="btn btn-primary">Get Random Quote</button>
    </form>
    <div id="quoteResult" class="result-container mt-3"></div>
  </div>
</div>


<!-- Quiz Container -->
<div id="quiz" class="quiz-container">
  <h1>Random Quiz</h1>
  <form id="quiz-form">
    <div class="question">
      <p id="q1">Loading question 1...</p>
      <div id="q1-options" class="options"></div>
    </div>
    <div class="question">
      <p id="q2">Loading question 2...</p>
      <div id="q2-options" class="options"></div>
    </div>
    <div class="question">
      <p id="q3">Loading question 3...</p>
      <div id="q3-options" class="options"></div>
    </div>
    <div class="question">
      <p id="q4">Loading question 4...</p>
      <div id="q4-options" class="options"></div>
    </div>
    <div class="question">
      <p id="q5">Loading question 5...</p>
      <div id="q5-options" class="options"></div>
    </div>
    <button type="submit" class="submit-btn">Submit</button>
  </form>
  <div id="quiz-results" class="result-container"></div>

  <!-- Social Media Sharing Buttons -->
  <div class="social-sharing">
    <button onclick="shareOnFacebook()">Share on Facebook</button>
    <button onclick="shareOnTwitter()">Share on Twitter</button>
    <button onclick="shareOnLinkedIn()">Share on LinkedIn</button>
  </div>
</div>

<script>
  // Function to save quiz results
  function saveQuizResult(score) {
    // Example of saving to localStorage
    localStorage.setItem('quizResult', score);
  }

  // Function to share quiz on Facebook
  function shareOnFacebook() {
    // Replace URL with your quiz URL
    var url = encodeURIComponent('https://yourquizurl.com');
    window.open('https://www.facebook.com/sharer/sharer.php?u=' + url, 'Share on Facebook', 'width=600,height=400');
  }

  // Function to share quiz on Twitter
  function shareOnTwitter() {
    // Replace URL with your quiz URL and text with your custom message
    var url = encodeURIComponent('https://yourquizurl.com');
    var text = encodeURIComponent('Check out this awesome quiz!');
    window.open('https://twitter.com/intent/tweet?url=' + url + '&text=' + text, 'Share on Twitter', 'width=600,height=400');
  }

  // Function to share quiz on LinkedIn
  function shareOnLinkedIn() {
    // Replace URL with your quiz URL and text with your custom message
    var url = encodeURIComponent('https://yourquizurl.com');
    var text = encodeURIComponent('Check out this awesome quiz!');
    window.open('https://www.linkedin.com/shareArticle?url=' + url + '&title=' + text, 'Share on LinkedIn', 'width=600,height=400');
  }

  const quizForm = document.getElementById('quiz-form');
  const quizResults = document.getElementById('quiz-results');

  quizForm.addEventListener('submit', function(event) {
    event.preventDefault(); // Prevent form submission

    const correctAnswers = {
      'q1': 'Paris',
      'q2': 'Tokyo',
      'q3': '4',
      'q4': 'H2O',
      'q5': 'William Shakespeare'
    };

    let score = 0;

    for (let i = 1; i <= 5; i++) {
      const question = 'q' + i;
      const selectedOption = document.querySelector('input[name="' + question + '"]:checked');

      if (selectedOption && selectedOption.value === correctAnswers[question]) {
        score++;
      }
    }

    // Save the score
    saveQuizResult(score);

    // Display the result
    quizResults.innerHTML = `<p>Your score: ${score} out of 5</p>`;
  });

  // Function to fetch and populate questions and options
  async function fetchQuestions() {
    try {
      const response = await fetch('https://opentdb.com/api.php?amount=5&type=multiple');
      const data = await response.json();

      const questions = data.results;

      questions.forEach((question, index) => {
        const qNumber = index + 1;
        const qID = 'q' + qNumber;
        const qContainer = document.getElementById(qID);
        const qOptions = document.getElementById(qID + '-options');

        qContainer.textContent = `${qNumber}. ${question.question}`;

        question.incorrect_answers.push(question.correct_answer);
        const shuffledOptions = shuffleArray(question.incorrect_answers);

        shuffledOptions.forEach(option => {
          const input = document.createElement('input');
          input.type = 'radio';
          input.name = qID;
          input.value = option;

          const label = document.createElement('label');
          label.textContent = option;

          const optionDiv = document.createElement('div');
          optionDiv.className = 'option';
          optionDiv.appendChild(input);
          optionDiv.appendChild(label);

          qOptions.appendChild(optionDiv);
        });
      });
    } catch (error) {
      console.error('Error fetching questions:', error);
    }
  }

  // Shuffle array function
  function shuffleArray(array) {
    for (let i = array.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [array[i], array[j]] = [array[j], array[i]];
    }
    return array;
  }

  // Fetch questions when the page loads
  window.onload = function() {
    fetchQuestions();
  };
</script>


</body>
</html>
